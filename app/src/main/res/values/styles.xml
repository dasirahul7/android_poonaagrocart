<resources>
    <!-- Base application theme. -->
    <style name="Theme.PoonaAgroCart" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowDisablePreview">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
    </style>

    <style name="CustomProgressDialog" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AlertStyle" parent="@android:style/Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/alerter_alert_min_height</item>
        <item name="android:maxHeight">@dimen/alerter_alert_max_height</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">top</item>
        <item name="android:paddingTop">@dimen/alerter_alert_padding</item>
    </style>

    <style name="AlertTextAppearance">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AlertTextAppearance.Title">
        <item name="android:textSize">@dimen/_20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AlertTextAppearance.Text">
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <!--Custom Dialog Style-->
    <style name="StyleDataConfirmationDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:windowAnimationStyle">@style/StyleDataConfirmationDialog.Animation</item>-->
    </style>

    <style name="StyleDialogUpDownAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_up</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

<!--    Dialog animation bottom up-->
    <style name="DialogAnimationDownUp">
        <item name="android:windowEnterAnimation">@anim/slide_out_down</item>
        <item name="android:windowExitAnimation">@anim/slide_up_dialog</item>
    </style>
    <style name="DialogAnimationUp">
        <item name="android:windowEnterAnimation">@anim/slide_in_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down_dialog</item>
    </style>

    <!-- Animation for dialog box -->
    <style name="DialogSlideAnim" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimationDownUp</item>
    </style>
    <style name="DialogSlideUp" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimationUp</item>
    </style>


    <!--rating bar-->
    <style name="theme_rating_bar">
        <item name="android:layout_gravity">start</item>
        <item name="iconSize">@dimen/_5sdp</item>
        <item name="colorControlActivated">@color/colorOrange</item>
        <item name="colorControlNormal">@color/color_star_rating_unselected</item>
    </style>

    <!--  Bottom Navigation View text size -->
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">3dp</item>
    </style>

    <!--Style for card view with bottom rounded corners-->
    <style name="ShapeAppearanceOverlay.MaterialCardView.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">@dimen/_30sdp</item>
        <item name="cornerSizeBottomLeft">@dimen/_30sdp</item>
    </style>
    <!--Style for card view with top rounded corners-->
    <style name="ShapeAppearanceOverlay.MaterialCardView.top" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/_20sdp</item>
        <item name="cornerSizeTopLeft">@dimen/_20sdp</item>
        <item name="android:shadowColor">@color/colorBlack1</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <!--Style for card view with bottom rounded corners-->
    <style name="ShapeAppearanceOverlay.MaterialCardView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">@dimen/_14sdp</item>
        <item name="cornerSizeBottomLeft">@dimen/_14sdp</item>
    </style>

    <!--Calender style-->
    <style name="datepicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:colorAccent">@color/colorPrimary</item>
        <!--item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item-->
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <!--Style for address radio buttons-->
    <style name="RadioButtonAddress" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/bg_radio_button</item>
        <item name="useMaterialThemeColors">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">@dimen/_4sdp</item>
        <item name="android:textSize">@dimen/_14sp</item>
    </style>
    <!--Style for SignUp radio buttons-->
    <style name="RadioButtonSignUp" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/bg_radio_sing_up</item>
        <item name="fontStyle">normal</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

<!--     Organic button style-->
    <style name="organic_button_style" parent="Widget.AppCompat.ImageButton">
        <item name="android:paddingTop">@dimen/_1sdp</item>
        <item name="android:paddingStart">@dimen/_1sdp</item>
    </style>
<!--    Green plus button style-->
    <style name="PlusButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:scaleType">center</item>
        <item name="android:background">@drawable/bg_green_square</item>
        <item name="android:src">@drawable/ic_plus_white</item>
    </style>
    <!--    Green minus button style-->
    <style name="MinusButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:scaleType">center</item>
        <item name="android:background">@drawable/bg_grey_square</item>
        <item name="android:src">@drawable/ic_minus</item>
    </style>

<!--    Address TextView style-->
    <style name="FormTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginStart">@dimen/_20sdp</item>
        <item name="android:layout_marginEnd">@dimen/_20sdp</item>
        <item name="android:layout_marginTop">@dimen/_15sdp</item>
        <item name="android:paddingTop">@dimen/alerter_padding_half</item>
<!--        <item name="android:paddingLeft">@dimen/alerter_padding_half</item>-->
        <item name="android:paddingRight">@dimen/alerter_padding_half</item>
        <item name="android:paddingBottom">@dimen/alerter_padding_small</item>
        <item name="android:textColor">@color/color15</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="setCustomFont">@string/font_poppins_semi_bold</item>
    </style>

    <style name="FormShortTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginStart">@dimen/_15sdp</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:layout_marginEnd">@dimen/_15sdp</item>
        <item name="android:paddingTop">@dimen/alerter_padding_half</item>
<!--        <item name="android:paddingLeft">@dimen/alerter_padding_half</item>-->
        <item name="android:paddingRight">@dimen/alerter_padding_half</item>
        <item name="android:paddingBottom">@dimen/alerter_padding_small</item>
        <item name="android:textColor">@color/color15</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="setCustomFont">@string/font_poppins_semi_bold</item>
    </style>

    <style name="FormEdittextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_marginStart">@dimen/_12sdp</item>
        <item name="android:layout_marginEnd">@dimen/_12sdp</item>
        <item name="android:layout_marginTop">@dimen/_2sdp</item>
<!--        <item name="android:background">@drawable/bg_dashboard_et_layout</item>-->
<!--        <item name="android:background">@drawable/background_shadow_with_white_bg</item>-->
<!--        <item name="background">@drawable/background_with_shadow_edittext</item>-->
        <item name="android:elevation">@dimen/_2sdp</item>
        <item name="android:paddingTop">@dimen/_8sdp</item>
        <item name="android:paddingBottom">@dimen/_8sdp</item>
        <item name="android:paddingRight">@dimen/_16sdp</item>
        <item name="android:paddingLeft">@dimen/_16sdp</item>
        <item name="android:textColor">@color/color_grey_txt</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="singleLine">true</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="setCustomFont">@string/font_poppins_regular</item>
    </style>

    <style name="FormShortEdittextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:layout_marginStart">@dimen/_12sdp</item>
        <item name="android:layout_marginEnd">@dimen/_12sdp</item>
<!--        <item name="android:background">@drawable/bg_dashboard_et_layout</item>-->
<!--        <item name="android:background">@drawable/background_shadow_with_white_bg</item>-->
        <item name="android:elevation">@dimen/_2sdp</item>
        <item name="android:paddingStart">@dimen/_16sdp</item>
        <item name="android:paddingEnd">@dimen/_16sdp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textColor">@color/color_grey_txt</item>
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="android:imeOptions"> actionNext</item>
        <item name="setCustomFont">@string/font_poppins_regular</item>
    </style>

    <style name="FormTitleTxtStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginStart">@dimen/_20sdp</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:layout_marginEnd">@dimen/_20sdp</item>
        <item name="android:paddingTop">@dimen/alerter_padding_half</item>
        <item name="android:paddingRight">@dimen/alerter_padding_half</item>
        <item name="android:paddingBottom">@dimen/alerter_padding_half</item>
<!--        <item name="android:paddingLeft">@dimen/alerter_padding_half</item>-->
        <item name="android:text">@string/detail_address</item>
        <item name="android:textColor">@color/color15</item>
        <item name="android:textSize">@dimen/_20sp</item>
        <item name="setCustomFont">@string/font_poppins_medium</item>
    </style>

<!--    Product item styles-->
    <style name="ProductNameStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/blue_txt_color</item>
        <item name="android:textSize">@dimen/cat_txt_size</item>
        <item name="android:textStyle">bold</item>
        <item name="setCustomFont">@string/font_poppins_semi_bold</item>
        <item name="singleLine">true</item>
        <item name="paddingStart">@dimen/_5sdp</item>
        <item name="paddingEnd">@dimen/_5sdp</item>
    </style>
    <style name="ProductLocationStyle" parent="Widget.AppCompat.TextView">
        <item name="android:drawablePadding">-5dp</item>
        <item name="android:layout_marginStart">@dimen/_2sdp</item>
        <item name="android:layout_marginEnd">@dimen/_2sdp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/color_grey_txt</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="singleLine">true</item>
        <item name="drawableStartCompat">@drawable/ic_location_small</item>
        <item name="setCustomFont">@string/font_poppins_regular</item>
    </style>

<!--    // Bottom sheet style-->
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>

    <style name="PinView.OptEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <!--custom alert dialog start-->
    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="alertDialogTheme">@style/CustomAlertDialogTheme</item>
    </style>

    <style name="CustomAlertDialogTheme">
        <item name="android:textSize">16sp</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textColorAlertDialogListItem">@drawable/alert_dialog_list_item_color</item>
        <item name="windowFixedWidthMajor">50%</item>
        <item name="windowFixedWidthMinor">50%</item>
    </style>
    <!--custom alert dialog end-->

</resources>