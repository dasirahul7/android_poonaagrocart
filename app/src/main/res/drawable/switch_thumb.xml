<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <item android:state_checked="false">
        <shape android:shape="oval">
            <gradient android:startColor="#FF848A"
                android:endColor="#9C121E"/>
            <size android:height="@dimen/_15sdp"
                android:width="@dimen/_15sdp"/>
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="oval">
            <gradient
                android:angle="180"
                android:startColor="#86C11F"
                android:endColor="#6C9F12"/>
            <size android:height="@dimen/_15sdp"
                android:width="@dimen/_15sdp"/>
        </shape>
    </item>
</selector>
