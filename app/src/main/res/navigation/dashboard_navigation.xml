<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

<!--  Home Fragment-->
    <fragment
        android:id="@+id/nav_home"
        android:name="com.poona.agrocart.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_nav_products_list"
            app:destination="@id/nav_products_list" />
        <action
            android:id="@+id/action_nav_home_to_basketProductDetailFragment2"
            app:destination="@id/basketProductDetailFragment2" />
        <action
            android:id="@+id/action_nav_home_to_nav_our_stores"
            app:destination="@id/nav_store" />
        <action
            android:id="@+id/action_nav_home_to_nav_explore"
            app:destination="@id/nav_explore" />
        <action
            android:id="@+id/action_nav_home_to_nav_product_details"
            app:destination="@id/nav_product_details" />
    </fragment>

<!--    MyOrdersFragment-->
    <fragment
        android:id="@+id/nav_orders"
        android:name="com.poona.agrocart.ui.my_orders.MyOrdersFragment"
        android:label="@string/my_orders"
        tools:layout="@layout/fragment_my_orders" >
        <action
            android:id="@+id/action_nav_orders_to_orderViewFragment2"
            app:destination="@id/orderViewFragment2" />
    </fragment>

<!--    MyProfileFragment-->
    <fragment
        android:id="@+id/nav_profile"
        android:name="com.poona.agrocart.ui.my_profile.MyProfileFragment"
        android:label="@string/my_profile"
        tools:layout="@layout/fragment_my_profile" />

    <!-- MyCartFragment-->
    <fragment
        android:id="@+id/nav_cart"
        android:name="com.poona.agrocart.ui.my_cart.MyCartFragment"
        android:label="MyCartFragment" >
        <action
            android:id="@+id/action_nav_cart_to_nav_order_summary"
            app:destination="@id/nav_order_summary" />
    </fragment>

    <!-- Favouirtes fragment-->
    <fragment
        android:id="@+id/nav_favourite"
        android:name="com.poona.agrocart.ui.favourites.FavouriteItemsFragment"
        android:label="FavouriteItemsFragment" />

    <fragment
        android:id="@+id/nav_products_list"
        android:name="com.poona.agrocart.ui.products_list.ProductListFragment"
        android:label="ProductListFragment" >
        <action
            android:id="@+id/action_nav_products_list_to_productDetailFragment2"
            app:destination="@id/nav_product_details" />
    </fragment>

    <fragment
        android:id="@+id/nav_product_details"
        android:name="com.poona.agrocart.ui.product_detail.ProductDetailFragment"
        android:label="ProductDetailFragment" />

    <fragment
        android:id="@+id/basketProductDetailFragment2"
        android:name="com.poona.agrocart.ui.basket_product_detail.BasketProductDetailFragment"
        android:label="BasketProductDetailFragment" />

    <!--Our stores fragment-->
    <fragment
        android:id="@+id/nav_store"
        android:name="com.poona.agrocart.ui.our_stores.OurStoresFragment"
        android:label="OurStoresFragment" />

    <!--Explore Fragment-->
    <fragment
        android:id="@+id/nav_explore"
        android:name="com.poona.agrocart.ui.explore.ExploreFragment"
        android:label="Explore">
        <action
            android:id="@+id/action_nav_explore_to_nav_explore_baskets"
            app:destination="@id/nav_explore_baskets" />
        <action
            android:id="@+id/action_nav_explore_to_nav_products_list"
            app:destination="@id/nav_products_list" />
    </fragment>
    <fragment
        android:id="@+id/nav_basket"
        android:name="com.poona.agrocart.ui.my_basket.MyBasketFragment"
        android:label="MyBasketFragment" >
        <action
            android:id="@+id/action_nav_basket_to_orderViewFragment2"
            app:destination="@id/orderViewFragment2" />
    </fragment>
    <fragment
        android:id="@+id/nav_address"
        android:name="com.poona.agrocart.ui.addresses.AddressesFragment"
        android:label="AddressesFragment" >
        <action
            android:id="@+id/action_nav_address_to_addressesFormFragment2"
            app:destination="@id/addressesFormFragment2" />
    </fragment>
    <fragment
        android:id="@+id/addressesFormFragment2"
        android:name="com.poona.agrocart.ui.addresses_form.AddressesFormFragment"
        android:label="AddressesFormFragment" />
    <fragment
        android:id="@+id/orderViewFragment2"
        android:name="com.poona.agrocart.ui.order_view.OrderViewFragment"
        android:label="OrderViewFragment" >
        <action
            android:id="@+id/action_orderViewFragment2_to_nav_order_track"
            app:destination="@id/nav_order_track" />
    </fragment>
    <fragment
        android:id="@+id/nav_about"
        android:name="com.poona.agrocart.ui.about_us.AboutUsFragment"
        android:label="AboutUsFragment" />
    <fragment
        android:id="@+id/nav_notification"
        android:name="com.poona.agrocart.ui.notification.NotificationFragment"
        android:label="@string/notification"
        tools:layout="@layout/fragment_notification" />
    <fragment
        android:id="@+id/nav_privacy"
        android:name="com.poona.agrocart.ui.privacy_policy.PrivacyFragment"
        android:label="PrivacyFragment" />
    <fragment
        android:id="@+id/nav_terms"
        android:name="com.poona.agrocart.ui.terms_conditions.TermsConditionFragment"
        android:label="TermsConditionFragment" />
    <fragment
        android:id="@+id/nav_offer"
        android:name="com.poona.agrocart.ui.offer_coupon.CouponFragment"
        android:label="CouponFragment" />
    <fragment
        android:id="@+id/nav_help_center"
        android:name="com.poona.agrocart.ui.help_center.HelpCenterFragment"
        android:label="HelpCenterFragment" >
        <action
            android:id="@+id/action_nav_help_center_to_nav_ticket_detail"
            app:destination="@id/nav_ticket_detail" />
    </fragment>
    <fragment
        android:id="@+id/nav_ticket_detail"
        android:name="com.poona.agrocart.ui.ticket_details.TicketDetailFragment"
        android:label="TicketDetailFragment" />
    <fragment
        android:id="@+id/nav_explore_baskets"
        android:name="com.poona.agrocart.ui.basket_page.BasketPageFragment"
        android:label="BasketPageFragment" />
    <fragment
        android:id="@+id/nav_order_track"
        android:name="com.poona.agrocart.ui.order_track.OrderTrackFragment"
        android:label="OrderTrackFragment" />
    <fragment
        android:id="@+id/nav_order_summary"
        android:name="com.poona.agrocart.ui.order_summary.OrderSummaryFragment"
        android:label="OrderSummaryFragment" />
</navigation>