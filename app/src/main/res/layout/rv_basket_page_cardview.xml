<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="basketCard"
            type="com.poona.agrocart.ui.basket_page.BasketCard" />

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_6sdp"
        android:padding="@dimen/_10sdp"
        app:cardCornerRadius="25dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_basket_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:src="@drawable/img_diet_basket" />

            <com.poona.agrocart.widgets.CustomTextView
                android:id="@+id/tv_basket_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:text="@{basketCard.productName}"
                android:textColor="@color/color_basket_name"
                android:textSize="@dimen/_16sp"
                app:setCustomFont="@string/font_poppins_bold" />

            <com.poona.agrocart.widgets.CustomTextView
                android:id="@+id/tv_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:text="@{basketCard.price}"
                android:textColor="@color/color_price"
                android:textSize="@dimen/_14sp"
                android:visibility="invisible"
                app:setCustomFont="@string/font_poppins_regular" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:weightSum="100">

                <com.poona.agrocart.widgets.CustomTextView
                    android:id="@+id/tv_final_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="78"
                    android:text="@{basketCard.discountedPrice}"
                    android:textColor="@color/color_price"
                    android:textSize="@dimen/_14sp"
                    app:setCustomFont="@string/font_poppins_regular" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_26sdp"
                    android:layout_weight="22"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg_green_add_cart_btn" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>