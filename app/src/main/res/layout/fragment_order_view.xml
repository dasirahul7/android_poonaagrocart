<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="orderViewDetailsViewModel"
            type="com.poona.agrocart.ui.nav_orders.order_view.OrderViewDetailsViewModel" />

    </data>



    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:background="@color/white"
            tools:context=".ui.nav_orders.order_view.OrderViewFragment">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardview_order_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_10sdp"
                android:layout_marginStart="-5dp"
                android:layout_marginEnd="-5dp"
                android:elevation="@dimen/_6sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true"
                app:contentPadding="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="@color/quantum_grey"
                app:strokeWidth="0.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <com.poona.agrocart.widgets.CustomTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="60"
                            android:singleLine="true"
                            android:text="@{`Order ID -`+orderViewDetailsViewModel.orderId}"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_16sp"
                            android:textStyle="bold"
                            app:setCustomFont="@string/font_poppins_bold" />

                        <com.poona.agrocart.widgets.CustomTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="40"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="@string/order_status"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sp"
                            android:textStyle="bold"
                            app:setCustomFont="@string/font_poppins_semi_bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <com.poona.agrocart.widgets.CustomTextView
                            android:id="@+id/tv_order_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="60"
                            android:singleLine="true"
                            android:textColor="@color/color_order_date_and_time"
                            android:textSize="@dimen/_14sp"
                            app:setCustomFont="@string/font_poppins_regular" />

                        <com.poona.agrocart.widgets.CustomTextView
                            android:id="@+id/tv_order_status"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="40"
                            android:gravity="center"
                            android:singleLine="true"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_14sp"
                            app:setCustomFont="@string/font_poppins_regular" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_deliveryCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_track_order_btn"
                android:elevation="@dimen/_6sdp"
                app:cardBackgroundColor="@color/clr_check_availabilty_bg"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true"
                android:layout_marginStart="-5dp"
                android:layout_marginEnd="-5dp"
                app:contentPadding="10dp"
                app:layout_constraintTop_toBottomOf="@+id/cardview_order_id"
                app:strokeColor="@color/colorPrimary"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:id="@+id/ll_delivery_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:cardUseCompatPadding="true">

                    <com.poona.agrocart.widgets.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingHorizontal="@dimen/_5sdp"
                        android:text="Delivery Code"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16sp"
                        android:textStyle="bold" />

                    <com.poona.agrocart.widgets.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing=".3"
                        android:text="@{orderViewDetailsViewModel.deliveryCode}"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_20sp"
                        android:textStyle="bold"
                        app:setCustomFont="@string/font_poppins_bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardview_shpping_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="-5dp"
                android:layout_marginEnd="-5dp"
                android:elevation="@dimen/_6sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true"
                app:contentPadding="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cv_deliveryCode"
                app:strokeColor="@color/quantum_grey"
                app:strokeWidth="0.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.poona.agrocart.widgets.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/shipping_address"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16sp"
                        android:textStyle="bold"
                        app:setCustomFont="@string/font_poppins_bold" />

                    <com.poona.agrocart.widgets.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:drawableStart="@drawable/ic_user"
                        android:drawablePadding="@dimen/_2sdp"
                        android:text="@{orderViewDetailsViewModel.customerName}"
                        android:textColor="@color/color_order_view_username"
                        android:textSize="@dimen/_16sp"
                        android:textStyle="bold"
                        app:setCustomFont="@string/font_poppins_semi_bold" />

                    <com.poona.agrocart.widgets.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:drawableStart="@drawable/ic_mobile_no"
                        android:drawablePadding="@dimen/_2sdp"
                        android:text="@{orderViewDetailsViewModel.customerNumber}"
                        android:textColor="@color/color_order_view_username"
                        android:textSize="@dimen/_14sp"
                        app:setCustomFont="@string/font_poppins_regular" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_weight="100"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_location" />

                        <com.poona.agrocart.widgets.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:text="@{orderViewDetailsViewModel.customerAddress +`, `+ orderViewDetailsViewModel.customerArea+`, `+orderViewDetailsViewModel.customerCity}"
                            android:textColor="@color/color_order_view_username"
                            android:textSize="@dimen/_14sp"
                            app:setCustomFont="@string/font_poppins_regular" />
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:id="@+id/ll_payment_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:weightSum="100"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardview_shpping_address">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="70"
                    android:orientation="vertical">

                    <com.poona.agrocart.widgets.CustomTextView
                        android:id="@+id/tv_payment_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16sp"
                        app:setCustomFont="@string/font_poppins_regular" />

                    <com.poona.agrocart.widgets.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@{`Transaction ID : `+orderViewDetailsViewModel.transactionId}"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16sp"
                        app:setCustomFont="@string/font_poppins_regular" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:gravity="end|center_vertical"
                    android:orientation="horizontal">

                    <com.poona.agrocart.widgets.CustomButton
                        android:id="@+id/btn_sign_up"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center|center_vertical"
                        android:background="@drawable/bg_invoice_btn"
                        android:gravity="center|center_vertical"
                        android:includeFontPadding="false"
                        android:text="@string/invoice"
                        android:textAlignment="center"
                        android:textColor="@color/background_button_selector_blue"
                        android:textSize="@dimen/_12sp"
                        app:setCustomFont="@string/font_poppins_semi_bold" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_expected_date_and_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:weightSum="100"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_payment_type">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="70"
                    android:orientation="vertical">

                    <com.poona.agrocart.widgets.CustomTextView
                        android:id="@+id/customTextView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/expected_delivery_date"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16sp"
                        android:textStyle="bold"
                        app:setCustomFont="@string/font_poppins_bold" />

                    <com.poona.agrocart.widgets.CustomTextView
                        android:id="@+id/tv_delivery_date_and_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_14sp"
                        app:setCustomFont="@string/font_poppins_semi_bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:gravity="end|center_vertical"
                    android:orientation="vertical">

                    <com.poona.agrocart.widgets.CustomButton
                        android:id="@+id/btn_track_order"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@drawable/bg_track_order_btn"
                        android:gravity="center|center_vertical"
                        android:includeFontPadding="false"
                        android:text="@string/track_order"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/color_track_order"
                        android:textSize="@dimen/_12sp"
                        app:setCustomFont="@string/font_poppins_regular" />

                </LinearLayout>

            </LinearLayout>

            <com.poona.agrocart.widgets.CustomTextView
                android:id="@+id/tv_basket_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="@string/basket_details"
                android:textColor="@color/clr_enter_otp"
                android:textSize="@dimen/_18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_expected_date_and_time"
                app:setCustomFont="@string/font_poppins_semi_bold" />

            <com.poona.agrocart.widgets.CustomTextView
                android:id="@+id/tv_product_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/_8sdp"
                android:text="@string/product_details"
                android:textColor="@color/clr_enter_otp"
                android:textSize="@dimen/_18sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_basket_details"
                app:setCustomFont="@string/font_poppins_semi_bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_basket_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_product_details" />

            <LinearLayout
                android:id="@+id/ll_amounts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rv_basket_items">

                <View
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/color_horizontal_line" />

                <LinearLayout
                    android:id="@+id/ll_sub_total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_4sdp"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <com.poona.agrocart.widgets.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="70"
                        android:text="@string/sub_total"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16sp"
                        app:setCustomFont="@string/font_poppins_regular" />

                    <com.poona.agrocart.widgets.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:gravity="end"
                        android:text="@{`Rs.`+orderViewDetailsViewModel.subTotalAmount}"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sp"
                        app:setCustomFont="@string/font_poppins_semi_bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_4sdp">
                    <View
                        android:id="@+id/viewline1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_horizontal_line" />

                    <com.poona.agrocart.widgets.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="@string/my_order_note"
                        android:textColor="@color/colorGrey"
                        android:textSize="@dimen/_12sp"
                        app:setCustomFont="@string/font_poppins_regular" />


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_discount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_4sdp"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <com.poona.agrocart.widgets.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="70"
                        android:text="@string/discount"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16sp"
                        app:setCustomFont="@string/font_poppins_regular" />

                    <com.poona.agrocart.widgets.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:gravity="end"
                        android:text="@{`Rs.`+orderViewDetailsViewModel.discountAmount}"
                        android:textColor="@color/color_discount_text"
                        android:textSize="@dimen/_14sp"
                        app:setCustomFont="@string/font_poppins_regular" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_delivery_charges"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <com.poona.agrocart.widgets.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="70"
                        android:text="@string/delivery_charges"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16sp"
                        app:setCustomFont="@string/font_poppins_regular" />

                    <com.poona.agrocart.widgets.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:gravity="end"
                        android:text="@{`Rs.`+orderViewDetailsViewModel.deliveryCharges}"
                        android:textColor="@color/color_discount_text"
                        android:textSize="@dimen/_14sp"
                        app:setCustomFont="@string/font_poppins_regular" />
                </LinearLayout>

                <View
                    android:id="@+id/rating_below_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:background="@color/color_horizontal_line" />

                <LinearLayout
                    android:id="@+id/ll_total_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <com.poona.agrocart.widgets.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="70"
                        android:text="@string/total_amount"
                        android:textColor="@color/bold_txt_color"
                        android:textSize="@dimen/_16sp"
                        android:textStyle="bold"
                        app:setCustomFont="@string/font_poppins_semi_bold" />

                    <com.poona.agrocart.widgets.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:gravity="end"
                        android:text="@{`Rs.`+orderViewDetailsViewModel.totalAmount}"
                        android:textColor="@color/bold_txt_color"
                        android:textSize="@dimen/_16sp"
                        android:textStyle="bold"
                        app:setCustomFont="@string/font_poppins_semi_bold" />
                </LinearLayout>

                <View
                    android:id="@+id/line4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:background="@color/color_horizontal_line" />

                <com.poona.agrocart.widgets.CustomTextView
                    android:id="@+id/tv_savings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:text="@{orderViewDetailsViewModel.savedAmount}"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/line4"
                    app:setCustomFont="@string/font_poppins_semi_bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_10sdp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_amounts">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cv_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_track_order_btn"
                    android:elevation="0dp"
                    app:cardBackgroundColor="@color/color_cancel_bg"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardElevation="3dp"
                    app:contentPadding="10dp"
                    app:strokeColor="@color/red_text_color"
                    app:strokeWidth="1dp">

                    <com.poona.agrocart.widgets.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="Cancel Order"
                        android:textColor="@color/color_cancel_order"
                        android:textSize="@dimen/_14sp"
                        android:textStyle="bold" />
                </com.google.android.material.card.MaterialCardView>

                <com.poona.agrocart.widgets.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_cancel_order"
                    android:singleLine="true"
                    android:textSize="@dimen/_12sp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:text="Your order has been cancelled.Money will be refunded into your wallet"/>
            </LinearLayout>

            <com.poona.agrocart.widgets.CustomTextView
                android:id="@+id/tv_your_ratings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_weight="50"
                android:text="@string/your_ratings"
                android:textColor="@color/clr_enter_otp"
                android:textSize="@dimen/_16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_cancel"
                app:setCustomFont="@string/font_poppins_semi_bold" />

            <RatingBar
                android:id="@+id/rating_bar_input"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:numStars="5"
                android:stepSize="0.5"
                android:theme="@style/theme_rating_bar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_your_ratings" />

            <com.poona.agrocart.widgets.CustomTextView
                android:id="@+id/tv_your_feedback"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/_10sdp"
                android:layout_weight="50"
                android:text="@string/your_feedback"
                android:textColor="@color/clr_enter_otp"
                android:textSize="@dimen/_16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rating_bar_input"
                app:setCustomFont="@string/font_poppins_semi_bold" />

            <com.poona.agrocart.widgets.CustomEditText
                android:id="@+id/et_feedback"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_feedback"
                android:gravity="top|start"
                android:inputType="textMultiLine"
                android:lines="8"
                android:maxLines="10"
                android:minLines="6"
                android:overScrollMode="always"
                android:padding="@dimen/_6sdp"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:textSize="@dimen/_14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_your_feedback"
                app:setCustomFont="@string/font_poppins_regular" />

            <com.poona.agrocart.widgets.CustomButton
                android:id="@+id/btn_submit_feedback"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical"
                android:layout_marginVertical="@dimen/_10sdp"
                android:background="@drawable/button_green"
                android:gravity="center|center_vertical"
                android:includeFontPadding="false"
                android:padding="@dimen/alerter_padding_small"
                android:text="@string/submit"
                android:textAllCaps="false"
                android:textColor="@color/background_color_white_green"
                android:textSize="@dimen/_18sp"
                app:layout_constraintTop_toBottomOf="@+id/et_feedback"
                app:setCustomFont="@string/font_poppins_semi_bold" />



            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardview_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_8sdp"
                android:elevation="@dimen/_2sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                app:cardUseCompatPadding="true"
                app:contentPadding="@dimen/_10sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_submit_feedback"
                app:strokeColor="@color/colorLightGrey"
                app:strokeWidth="0.5dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="100">

                        <com.poona.agrocart.widgets.imageview.CircularImageView
                            android:id="@+id/iv_user_image"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:src="@drawable/ic_profile"
                            app:civ_border_color="#979797"
                            app:civ_border_width="@dimen/_1sdp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="100">

                                <com.poona.agrocart.widgets.CustomTextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_3sdp"
                                    android:layout_weight="70"
                                    android:gravity="start"
                                    android:text="@{orderViewDetailsViewModel.reviewName}"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_16sp"
                                    app:setCustomFont="@string/font_poppins_semi_bold" />

                                <com.poona.agrocart.widgets.CustomTextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_3sdp"
                                    android:layout_marginEnd="@dimen/_4sdp"
                                    android:layout_weight="70"
                                    android:gravity="end"
                                    android:singleLine="true"
                                    android:text="@{orderViewDetailsViewModel.reviewDate}"
                                    android:textColor="@color/color_grey_txt"
                                    android:textSize="@dimen/_14sp"
                                    app:setCustomFont="@string/font_poppins_regular" />

                            </LinearLayout>

                            <RatingBar
                                android:id="@+id/rating_bar"
                                style="@style/Widget.AppCompat.RatingBar.Indicator"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:numStars="5"
                                android:stepSize="0.5"
                                android:theme="@style/theme_rating_bar" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@color/color_grey_txt" />

                    <com.poona.agrocart.widgets.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:gravity="start"
                        android:text="@{orderViewDetailsViewModel.customerFeedback}"
                        android:textColor="@color/color_grey_txt"
                        android:textSize="@dimen/_16sp"
                        app:setCustomFont="@string/font_poppins_regular" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</layout>