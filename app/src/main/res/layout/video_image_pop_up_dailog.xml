<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGreyTransparent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:background="@drawable/background_shadow_with_white_bg">


                <com.google.android.exoplayer2.ui.PlayerView
                    android:id="@+id/pv_video_player"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_margin="@dimen/_4sdp"
                    android:background="@android:color/transparent"
                    app:controller_layout_id="@layout/custom_media_controller"
                    app:hide_on_touch="true"
                    app:resize_mode="fill"
                    app:show_timeout="5000"
                    app:use_controller="true" />

                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerInParent="true"
                    android:indeterminate="true"
                    android:indeterminateBehavior="repeat" />

            </RelativeLayout>


            <ImageView
                android:id="@+id/iv_close_dialog"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/ic_gallery_image_cancel_icon" />

        </LinearLayout>

    </RelativeLayout>


</layout>