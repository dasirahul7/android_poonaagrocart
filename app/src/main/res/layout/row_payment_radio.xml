<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


<data>
    <variable
        name="paymentModule"
        type="com.poona.agrocart.data.network.responses.orderResponse.Payments" />
</data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">

        <RadioButton
            android:id="@+id/rb_payment"
            style="@style/RadioButtonAddress"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:padding="@dimen/_5sdp"
            android:singleLine="true"
            android:text="@{paymentModule.paymentType}"
            app:useMaterialThemeColors="false"
            tools:ignore="RtlSymmetry" />
        <com.poona.agrocart.widgets.CustomTextView
            android:visibility="gone"
            android:id="@+id/tv_wallet_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_8sdp"
            android:gravity="start"
            android:paddingStart="@dimen/_26sdp"
            android:text='@{paymentModule.balance ??  ""}'
            android:textColor="@color/color_wallet_balance"
            android:textSize="@dimen/_12sp"
            app:setCustomFont="@string/font_poppins_semi_bold" />

    </LinearLayout>

</layout>