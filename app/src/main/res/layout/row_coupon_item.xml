<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="moduleCoupon"
            type="com.poona.agrocart.ui.offer_coupon.Coupons" />
    </data>
    <com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="@dimen/_150sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    android:layout_margin="@dimen/_10sdp">
<!--    <LinearLayout-->
<!--        android:orientation="vertical"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent">-->
<!--        -->
<!--    </LinearLayout>-->
    <com.vipulasri.ticketview.TicketView
        android:id="@+id/ticketView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:ticketDividerPadding="0dp"
        app:ticketDividerType="dash"
        app:ticketOrientation="horizontal"
        app:ticketScallopPositionPercent="50"
        app:ticketScallopRadius="10dp"
        app:ticketShowDivider="false"
        app:ticketBackgroundColor="@color/ticket_color"
        tools:layout_editor_absoluteX="20dp">
    </com.vipulasri.ticketview.TicketView>

    <com.poona.agrocart.widgets.CustomTextView
        android:id="@+id/tv_discount"
        android:layout_margin="@dimen/_10sdp"
        android:text="Discount"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_12sdp"
        app:setCustomFont="@string/font_poppins_bold"
        android:textColor="@color/dark_blue_color"/>
    <com.poona.agrocart.widgets.CustomTextView
        android:id="@+id/tv_discount_value"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:text="@{moduleCoupon.discount}"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold"
        app:setCustomFont="@string/font_poppins_bold"
        android:textColor="@color/dark_blue_color"/>

    <com.poona.agrocart.widgets.CustomTextView
        android:id="@+id/tv_max_amount"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_60sdp"
        android:text="@{moduleCoupon.minimumAmount}"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_10sdp"
        app:setCustomFont="@string/font_poppins_bold"
        android:textColor="@color/dark_blue_color"/>

    <com.poona.agrocart.widgets.CustomTextView
            android:id="@+id/tv_title"
            android:layout_margin="@dimen/_10sdp"
            android:text="Coupon Code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            app:setCustomFont="@string/font_poppins_bold"
            android:textColor="@color/dark_blue_color"/>
        <com.poona.agrocart.widgets.CustomTextView
            android:id="@+id/tv_coupon_code"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:text="@{moduleCoupon.couponCode}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            app:setCustomFont="@string/font_poppins_bold"
            android:textColor="@color/dark_blue_color"/>
        <com.poona.agrocart.widgets.CustomTextView
            android:id="@+id/tv_valid"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_80sdp"
            android:text="Valid till"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_14sp"
            android:textStyle="bold"
            app:setCustomFont="@string/font_poppins_bold"
            android:textColor="@color/dark_blue_color"/>
        <com.poona.agrocart.widgets.CustomTextView
            android:id="@+id/tv_valid_value"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_100sdp"
            android:text="@{moduleCoupon.validDate}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sp"
            app:setCustomFont="@string/font_poppins_bold"
            android:textColor="@color/dark_blue_color"/>

    <com.poona.agrocart.widgets.CustomTextView
        android:id="@+id/tv_type"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_80sdp"
        android:layout_marginEnd="@dimen/_80sdp"
        android:text="Type"
        android:gravity="start"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_14sp"
        android:textStyle="bold"
        app:setCustomFont="@string/font_poppins_bold"
        android:textColor="@color/dark_blue_color"/>
    <com.poona.agrocart.widgets.CustomTextView
        android:id="@+id/tv_type_value"
        android:layout_gravity="right"
        android:gravity="start"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_100sdp"
        android:text="@{moduleCoupon.type}"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_12sp"
        app:setCustomFont="@string/font_poppins_bold"
        android:textColor="@color/dark_blue_color"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_120sdp"
        android:background="@color/dark_blue_color"/>

    <com.poona.agrocart.widgets.CustomTextView
        android:id="@+id/tv_terms"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_130sdp"
        android:text="@string/terms_conditions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_12sp"
        app:setCustomFont="@string/font_poppins_bold"
        android:textColor="@color/dark_blue_color"/>

</com.google.android.material.card.MaterialCardView>
</layout>