<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:background="@drawable/background_login_fragment"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:background="@drawable/background_login_fragment"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_330sdp"
            android:id="@+id/cl_main">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/_25sdp"
                android:scaleType="fitXY"
                android:src="@drawable/agro_main_bg"
                android:layout_marginBottom="@dimen/_40sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_poona_agro_cart_logo"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="clip_vertical |bottom"
                android:src="@drawable/ic_poona_agro_cart_logo"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="@dimen/_15sdp"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/_20sdp"
        android:background="@drawable/background_login_fragment"
        android:layout_gravity="bottom"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_height="wrap_content">


        <com.poona.agrocart.widgets.CustomTextView
            android:id="@+id/tv_fast_fresh_healthy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:lineSpacingExtra="@dimen/_10sdp"
            android:text="@string/fast_fresh_healthy"
            android:textColor="@color/color8"
            android:textSize="@dimen/_30sdp"
            app:setCustomFont="@string/font_poppins_regular" />

        <com.poona.agrocart.widgets.CustomTextView
            android:id="@+id/tv_get_your_groceries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_fast_fresh_healthy"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/get_ur_groceries"
            android:textColor="@color/clr_get_your_groceries_text"
            android:textSize="@dimen/_20sdp"
            app:setCustomFont="@string/font_poppins_regular" />

        <LinearLayout
            android:id="@+id/ll_et_phone_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_get_your_groceries"
            android:weightSum="100">

            <!--ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/india_flag"
                /-->
            <com.hbb20.CountryCodePicker
                android:id="@+id/country_code_picker"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:ccp_showNameCode="false"
                android:layout_weight="25"
                android:onClick="onCountryPickerClick"
                app:ccp_showArrow="false"
                app:ccp_textSize="@dimen/_16sp"
                android:textSize="@dimen/_16sp"
                android:background="@drawable/ll_login_signup_bg"
                android:layout_marginTop="@dimen/_10sdp"/>



            <com.poona.agrocart.widgets.CustomEditText
                android:id="@+id/et_phone_no"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_weight="65"
                android:maxLength="10"
                android:textSize="@dimen/_16sp"
                android:background="@drawable/ll_login_signup_bg"
                android:inputType="phone"
                app:setCustomFont="@string/font_poppins_regular" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_weight="10"
                android:padding="@dimen/alerter_padding_small"
                android:src="@drawable/ic_sign_up"
                android:background="@drawable/ll_login_signup_bg"
                android:id="@+id/iv_sign_up"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/ll_et_phone_no"
            android:id="@+id/ll_terms_of_service"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="wrap_content">
            <com.poona.agrocart.widgets.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sp"
                android:drawablePadding="@dimen/alerter_padding_half"
                android:text="@string/by_continuing_you_agree"
                app:setCustomFont="@string/font_poppins_regular" />
            <com.poona.agrocart.widgets.CustomTextView
                android:id="@+id/ctv_terms_of_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color13"
                android:textSize="@dimen/_12sp"
                android:drawablePadding="@dimen/alerter_padding_half"
                android:text="@string/terms_of_service"
                android:textStyle="bold"
                app:setCustomFont="@string/font_poppins_regular" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/ll_terms_of_service"
            android:id="@+id/ll_privacy_policy"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_4sdp"
            android:weightSum="100"
            android:layout_height="wrap_content">
            <com.poona.agrocart.widgets.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sp"
                android:drawablePadding="@dimen/alerter_padding_half"
                android:text="@string/and"
                app:setCustomFont="@string/font_poppins_regular" />
            <com.poona.agrocart.widgets.CustomTextView
                android:id="@+id/ctv_privacy_policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sp"
                android:textStyle="bold"
                android:drawablePadding="@dimen/alerter_padding_half"
                android:textColor="@color/color13"
                android:text="@string/privacy_policy"
                app:setCustomFont="@string/font_poppins_regular" />


        </LinearLayout>
    </RelativeLayout>
    </LinearLayout>

    </ScrollView>
</RelativeLayout>
</layout>