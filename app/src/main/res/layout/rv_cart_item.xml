<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="cartItem"
            type="com.poona.agrocart.ui.nav_my_cart.CartItem" />

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="@dimen/_6sdp"
        android:padding="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_15sdp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <com.google.android.material.card.MaterialCardView
                app:cardBackgroundColor="@color/white"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:padding="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_bell_pepper_red" />

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_weight="45"
                android:orientation="vertical">

                <com.poona.agrocart.widgets.CustomTextView
                    android:id="@+id/tv_product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{cartItem.name}"
                    android:textColor="@color/color_basket_name"
                    android:textSize="@dimen/_16sp"
                    android:paddingHorizontal="@dimen/_2sdp"
                    app:setCustomFont="@string/font_poppins_bold" />

                <com.poona.agrocart.widgets.CustomTextView
                    android:id="@+id/tv_product_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{cartItem.weight}"
                    android:paddingHorizontal="@dimen/_2sdp"
                    android:textColor="@color/color_grey_txt"
                    android:textSize="@dimen/_14sp"
                    app:setCustomFont="@string/font_poppins_regular" />

                <com.poona.agrocart.widgets.CustomTextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{cartItem.price}"
                    android:background="@drawable/bg_strikethrough"
                    android:textColor="@color/color_grey_txt"
                    android:textSize="@dimen/_14sp"
                    android:paddingHorizontal="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    app:setCustomFont="@string/font_poppins_semi_bold" />

                <com.poona.agrocart.widgets.CustomTextView
                    android:id="@+id/tv_final_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{cartItem.finalPrice}"
                    android:textColor="@color/clr_enter_otp"
                    android:textSize="@dimen/_14sp"
                    android:paddingHorizontal="@dimen/_2sdp"
                    app:setCustomFont="@string/font_poppins_semi_bold" />

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="@dimen/_8sdp"
                android:layout_weight="25">

                <ImageView
                    android:id="@+id/iv_cross"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:src="@drawable/ic_cross"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="@dimen/_8sdp"/>

                <ImageView
                    android:id="@+id/iv_plus"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_plus_with_sqaure_bg"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="@dimen/_8sdp"/>

                <com.poona.agrocart.widgets.CustomEditText
                    android:id="@+id/et_quantity"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@color/white"
                    android:text="@string/_1"
                    android:textSize="@dimen/_14sp"
                    android:enabled="false"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/iv_plus"
                    app:setCustomFont="@string/font_poppins_regular" />


                <ImageView
                    android:id="@+id/iv_minus"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_minus_with_square_bg"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/et_quantity" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>