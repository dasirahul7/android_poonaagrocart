<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="productAndPrice"
            type="com.poona.agrocart.data.network.responses.orderResponse.ItemsDetail" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_2sdp"
        android:weightSum="100">

        <com.poona.agrocart.widgets.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:singleLine="true"
            android:text='@{productAndPrice.productName ?? productAndPrice.basketName}'
            android:textColor="@color/black"
            android:textSize="@dimen/_16sp"
            app:setCustomFont="@string/font_poppins_regular" />

        <com.poona.agrocart.widgets.CustomTextView
            android:id="@+id/tv_quantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:singleLine="true"
            android:text='@{`Rs. `+productAndPrice.pricePerQuantity+` X `+productAndPrice.quantity ?? productAndPrice.noOfSubscription }'
            android:textColor="@color/black"
            android:textSize="@dimen/_16sp"
            app:setCustomFont="@string/font_poppins_regular" />

        <com.poona.agrocart.widgets.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:gravity="end"
            android:singleLine="true"
            android:text='@{`Rs.`+productAndPrice.totalPrice}'
            android:textColor="@color/color_discount_text"
            android:textSize="@dimen/_16sp"
            app:setCustomFont="@string/font_poppins_regular" />

    </LinearLayout>

</layout>