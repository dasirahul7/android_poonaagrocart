<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/clr_verify_otp_text"
        tools:context=".ui.home.HomeFragment">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_20sdp"
                android:orientation="vertical">

                <!--Search View Layout-->
                <com.poona.agrocart.widgets.CustomEditText
                    android:id="@+id/et_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/bg_et_search"
                    android:drawableStart="@drawable/ic_search"
                    android:drawablePadding="@dimen/_8sdp"
                    android:hint="@string/search_store"
                    android:paddingStart="@dimen/_8sdp"
                    tools:ignore="RtlSymmetry"
                    android:paddingTop="@dimen/_2sdp"
                    android:textColor="@color/color_grey_txt"
                    android:textSize="@dimen/_16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:setCustomFont="@string/font_poppins_regular" />

                <!-- Banner Layout -->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="vertical">

                    <com.github.demono.AutoScrollViewPager
                        android:id="@+id/view_pager_banner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_110sdp" />
                    <!--Banner dots-->
                    <me.huseyinozer.TooltipIndicator
                        android:id="@+id/tl_indicators"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_8sdp"
                        android:layout_marginStart="@dimen/_30sdp"
                        android:layout_marginTop="-20dp"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:ti_lineHeight="6dp"
                        app:ti_lineMargin="4dp"
                        app:ti_lineWidth="8dp"
                        app:ti_lineWidthSelected="@dimen/_15sdp"
                        app:ti_selectedLineDrawable="@drawable/ic_selected_dot"
                        app:ti_unselectedLineDrawable="@drawable/unselected_dot" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <!--Shop by Category-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <com.poona.agrocart.widgets.CustomTextView
                        android:id="@+id/txt_category"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/poppins"
                        android:text="@string/shop_by_category"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16sdp"
                        app:fontFamily="@font/poppins" />

                    <com.poona.agrocart.widgets.CustomTextView
                        android:id="@+id/txt_all_category"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/poppins"
                        android:text="@string/see_all"
                        android:textColor="@color/colorGreenButton"
                        android:textSize="@dimen/_14sdp"
                        app:setCustomFont="@string/font_poppins_regular" />

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rec_category"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5sdp" />

                <!--Basket-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <com.poona.agrocart.widgets.CustomTextView
                        android:id="@+id/txt_basket"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/poppins"
                        android:text="@string/basket"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16sdp"
                        app:fontFamily="@font/poppins" />
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rec_basket"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5sdp" />


                <!--Best Selling-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <com.poona.agrocart.widgets.CustomTextView
                        android:id="@+id/txt_best_selling"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/poppins"
                        android:text="@string/best_selling"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16sdp"
                        app:fontFamily="@font/poppins" />

                    <com.poona.agrocart.widgets.CustomTextView
                        android:id="@+id/txt_all_selling"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/poppins"
                        android:text="@string/see_all"
                        android:textColor="@color/colorGreenButton"
                        android:textSize="@dimen/_14sdp" />

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rec_offer_product"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5sdp" />

                <!--Exclusive Offers-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <com.poona.agrocart.widgets.CustomTextView
                        android:id="@+id/txt_offers"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/poppins"
                        android:text="@string/exclusive_offer"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16sdp"
                        app:fontFamily="@font/poppins" />

                    <com.poona.agrocart.widgets.CustomTextView
                        android:id="@+id/txt_all_offers"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/poppins"
                        android:text="@string/see_all"
                        android:textColor="@color/colorGreenButton"
                        android:textSize="@dimen/_14sdp" />

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rec_offers"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5sdp" />


                <!--Our Shop-->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardview_our_shops"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:elevation="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/green_cart_bg"
                        android:padding="@dimen/_10sdp">


                        <LinearLayout
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_20sdp"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toStartOf="@+id/img_store"
                            android:orientation="vertical">

                            <com.poona.agrocart.widgets.CustomTextView
                                android:id="@+id/tv_shop"
                                android:padding="@dimen/_5sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Our shop"
                                android:textAllCaps="true"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_20sp"
                                android:textStyle="bold"
                                app:setCustomFont="@string/font_poppins_bold"/>

                            <com.poona.agrocart.widgets.CustomTextView
                                app:setCustomFont="@string/font_poppins_regular"
                                android:id="@+id/tv_shop_content"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sample_content"
                                android:padding="@dimen/_5sdp"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/img_store"
                            android:layout_width="@dimen/_110sdp"
                            android:layout_height="@dimen/_110sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/basket_item" />

                    </RelativeLayout>


                </com.google.android.material.card.MaterialCardView>
                <!-- O3 Banner-->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/o_three_banner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:elevation="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <RelativeLayout
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/o_three_banner">

                        <ImageView
                            android:layout_marginStart="@dimen/_20sdp"
                            android:id="@+id/img_three"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_o_three"/>

                       <com.poona.agrocart.widgets.CustomTextView
                           android:id="@+id/tv_O_three"
                           android:layout_toStartOf="@+id/img_play"
                           android:layout_toEndOf="@+id/img_three"
                           android:text="@string/o_three_content"
                           android:layout_width="wrap_content"
                           android:textSize="@dimen/_16sp"
                           android:textColor="@color/white"
                           android:textStyle="bold"
                           android:layout_centerInParent="true"
                           app:setCustomFont="@string/font_poppins_bold"
                           android:layout_marginLeft="@dimen/_10sdp"
                           android:layout_marginRight="@dimen/_10sdp"
                           android:layout_height="wrap_content" />

                        <ImageView
                            android:id="@+id/img_play"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/_20sdp"
                            android:src="@drawable/ic_play" />
                    </RelativeLayout>


                </com.google.android.material.card.MaterialCardView>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rec_product"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_10sdp" />
            </LinearLayout>


        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>