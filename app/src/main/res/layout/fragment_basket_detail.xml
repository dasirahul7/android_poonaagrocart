                    android:layout_height="wrap_content"
                    android:layout_weight="90"
                    android:text="@string/about_this_product"
                    android:textColor="@color/clr_enter_otp"
                    android:textSize="@dimen/_16sp"
                    app:setCustomFont="@string/font_poppins_regular" />

                <com.poona.agrocart.widgets.ExpandIconView
                    android:id="@+id/iv_about_this_product_hide_show"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="10"
                    app:eiv_animationDuration="300"
                    app:eiv_colorLess="@color/black"
                    app:eiv_colorMore="@color/black"
                    app:eiv_roundedCorners="true"
                    app:eiv_switchColor="true" />

            </LinearLayout>

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@color/color_horizontal_line"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_about_this_product" />

            <com.poona.agrocart.widgets.CustomTextView
                android:id="@+id/tv_about_this_product_brief"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="@{moduleBasket.basketData.aboutBasket}"
                android:textColor="@color/color_grey_txt"
                android:textSize="@dimen/_14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line2"
                app:setCustomFont="@string/font_poppins_regular" />

            <LinearLayout
                android:id="@+id/ll_benefits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:orientation="horizontal"
                android:weightSum="100"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_about_this_product_brief">

                <com.poona.agrocart.widgets.CustomTextView
                    android:id="@+id/tv_benefits"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="90"
                    android:text="@string/benefits"
                    android:textColor="@color/clr_enter_otp"
                    android:textSize="@dimen/_16sp"
                    app:setCustomFont="@string/font_poppins_regular" />

                <com.poona.agrocart.widgets.ExpandIconView
                    android:id="@+id/iv_benefits_hide_show"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="10"
                    app:eiv_animationDuration="300"
                    app:eiv_colorLess="@color/black"
                    app:eiv_colorMore="@color/black"
                    app:eiv_roundedCorners="true"
                    app:eiv_switchColor="true" />

            </LinearLayout>

            <View
                android:id="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@color/color_horizontal_line"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_benefits" />

            <com.poona.agrocart.widgets.CustomTextView
                android:id="@+id/tv_benefits_brief"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="@{moduleBasket.basketData.basketBenefit}"
                android:textColor="@color/color_grey_txt"
                android:textSize="@dimen/_14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line4"
                app:setCustomFont="@string/font_poppins_regular" />

            <LinearLayout
                android:id="@+id/ll_storage_and_use"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:orientation="horizontal"
                android:weightSum="100"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_benefits_brief">

                <com.poona.agrocart.widgets.CustomTextView
                    android:id="@+id/tv_storage_and_use"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="90"
                    android:text="@string/storage_and_uses"
                    android:textColor="@color/clr_enter_otp"
                    android:textSize="@dimen/_16sp"
                    app:setCustomFont="@string/font_poppins_regular" />

                <com.poona.agrocart.widgets.ExpandIconView
                    android:id="@+id/iv_storage_use_hide_show"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="10"
                    app:eiv_animationDuration="300"
                    app:eiv_colorLess="@color/black"
                    app:eiv_colorMore="@color/black"
                    app:eiv_roundedCorners="true"
                    app:eiv_switchColor="true" />

            </LinearLayout>

            <View
                android:id="@+id/line5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@color/color_horizontal_line"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_storage_and_use" />

            <com.poona.agrocart.widgets.CustomTextView
                android:id="@+id/tv_storage_and_use_brief"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="@{moduleBasket.basketData.basketUses}"
                android:textColor="@color/color_grey_txt"
                android:textSize="@dimen/_14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line5"
                app:setCustomFont="@string/font_poppins_regular" />

            <LinearLayout
                android:id="@+id/ll_other_product_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:orientation="horizontal"
                android:weightSum="100"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_storage_and_use_brief">

                <com.poona.agrocart.widgets.CustomTextView
                    android:id="@+id/tv_other_product_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="90"
                    android:text="@string/other_product_info"
                    android:textColor="@color/clr_enter_otp"
                    android:textSize="@dimen/_16sp"
                    app:setCustomFont="@string/font_poppins_regular" />

                <com.poona.agrocart.widgets.ExpandIconView
                    android:id="@+id/iv_other_product_info_hide_show"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="10"
                    app:eiv_animationDuration="300"
                    app:eiv_colorLess="@color/black"
                    app:eiv_colorMore="@color/black"
                    app:eiv_roundedCorners="true"
                    app:eiv_switchColor="true" />

            </LinearLayout>

            <View
                android:id="@+id/line6"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@color/color_horizontal_line"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_other_product_info" />

            <com.poona.agrocart.widgets.CustomTextView
                android:id="@+id/tv_other_product_info_brief"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="@{moduleBasket.basketData.basketInfo}"
                android:textColor="@color/color_grey_txt"
                android:textSize="@dimen/_14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line6"
                app:setCustomFont="@string/font_poppins_regular" />

            <LinearLayout
                android:id="@+id/ll_variable_weight_policy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:orientation="horizontal"
                android:weightSum="100"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_other_product_info_brief">

                <com.poona.agrocart.widgets.CustomTextView
                    android:id="@+id/tv_variable_weight_policy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="90"
                    android:text="@string/variable_weight_policy"
                    android:textColor="@color/clr_enter_otp"
                    android:textSize="@dimen/_16sp"
                    app:setCustomFont="@string/font_poppins_regular" />

                <com.poona.agrocart.widgets.ExpandIconView
                    android:id="@+id/iv_variable_weight_policy_show_hide"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="10"
                    app:eiv_animationDuration="300"
                    app:eiv_colorLess="@color/black"
                    app:eiv_colorMore="@color/black"
                    app:eiv_roundedCorners="true"
                    app:eiv_switchColor="true" />

            </LinearLayout>

            <View
                android:id="@+id/line7"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@color/color_horizontal_line"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_variable_weight_policy" />

            <com.poona.agrocart.widgets.CustomTextView
                android:id="@+id/tv_variable_weight_policy_breif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="@{moduleBasket.basketData.basketWeightPolicy}"
                android:textColor="@color/color_grey_txt"
                android:textSize="@dimen/_14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line7"
                app:setCustomFont="@string/font_poppins_regular" />

            <LinearLayout
                android:id="@+id/ll_nutritions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:orientation="horizontal"
                android:weightSum="100"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_variable_weight_policy_breif">

                <com.poona.agrocart.widgets.CustomTextView
                    android:id="@+id/tv_nutritions"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="90"
                    android:text="@string/nutritions"
                    android:textColor="@color/clr_enter_otp"
                    android:textSize="@dimen/_16sp"
                    app:setCustomFont="@string/font_poppins_regular" />

                <com.poona.agrocart.widgets.ExpandIconView
                    android:id="@+id/iv_nutritions_show_hide"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="10"
                    app:eiv_animationDuration="300"
                    app:eiv_colorLess="@color/black"
                    app:eiv_colorMore="@color/black"
                    app:eiv_roundedCorners="true"
                    app:eiv_switchColor="true" />

            </LinearLayout>

            <View
                android:id="@+id/line8"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@color/color_horizontal_line"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_nutritions" />

            <com.poona.agrocart.widgets.CustomTextView
                android:id="@+id/tv_nutritions_brief"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="@{moduleBasket.basketData.basketNutrition}"
                android:textColor="@color/color_grey_txt"
                android:textSize="@dimen/_14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line8"
                app:setCustomFont="@string/font_poppins_regular" />



            <LinearLayout
                android:id="@+id/ll_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_nutritions_brief">

                <com.poona.agrocart.widgets.CustomTextView
                    android:id="@+id/tv_review"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/review_ratings"
                    android:textColor="@color/clr_enter_otp"
                    android:textSize="@dimen/_16sp"
                    app:setCustomFont="@string/font_poppins_regular" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:src="@drawable/ic_star" />

                    <com.poona.agrocart.widgets.CustomTextView
                        android:id="@+id/rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/_2sdp"
                        android:text="@string/_5_0"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sp"
                        app:setCustomFont="@string/font_poppins_regular" />

                    <com.poona.agrocart.widgets.CustomTextView
                        android:id="@+id/tv_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingEnd="@dimen/_5sdp"
                        android:text="15 Ratings"
                        android:textColor="@color/colorGrey"
                        android:textSize="@dimen/_14sp"
                        app:setCustomFont="@string/font_poppins_semi_bold" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:rotation="90"
                        android:src="@drawable/ic_right_arrow" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@color/color_horizontal_line"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_review" />

            <com.poona.agrocart.widgets.CustomTextView
                android:id="@+id/tv_your_ratings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_weight="50"
                android:text="@string/your_ratings"
                android:textColor="@color/clr_enter_otp"
                android:textSize="@dimen/_16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line3"
                app:setCustomFont="@string/font_poppins_regular" />

            <RatingBar
                android:id="@+id/rating_bar_input"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:numStars="5"
                android:stepSize="0.5"
                android:theme="@style/theme_rating_bar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_your_ratings" />

            <com.poona.agrocart.widgets.CustomTextView
                android:id="@+id/tv_your_feedback"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_weight="50"
                android:text="@string/your_feedback"
                android:textColor="@color/clr_enter_otp"
                android:textSize="@dimen/_16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rating_bar_input"
                app:setCustomFont="@string/font_poppins_regular" />

            <com.poona.agrocart.widgets.CustomEditText
                android:id="@+id/et_feedback"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_feedback"
                android:gravity="top|start"
                android:inputType="textMultiLine"
                android:lines="8"
                android:maxLines="10"
                android:minLines="6"
                android:overScrollMode="always"
                android:padding="@dimen/_6sdp"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:textSize="@dimen/_14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_your_feedback"
                app:setCustomFont="@string/font_poppins_regular" />

            <com.poona.agrocart.widgets.CustomButton
                android:id="@+id/btn_submit"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginVertical="@dimen/_10sdp"
                android:background="@drawable/button_green"
                android:gravity="center|center_vertical"
                android:includeFontPadding="false"
                android:padding="@dimen/alerter_padding_small"
                android:text="@string/submit"
                android:textAllCaps="false"
                android:textColor="@color/background_color_white_green"
                android:textSize="@dimen/_18sp"
                app:layout_constraintTop_toBottomOf="@+id/et_feedback"
                app:setCustomFont="@string/font_poppins_semi_bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_product_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:layout_marginVertical="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_submit" />

            <com.poona.agrocart.widgets.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:text="@string/see_more"
                android:textColor="@color/selectedGreen"
                android:textSize="@dimen/_14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rv_product_comment" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>